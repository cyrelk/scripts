# -*- mode: shell-script -*-

verifyuser () {
    echo "  -- verifyuser"

    set +e

    /usr/bin/id ${login} > /dev/null 2>&1

    if [ "$?" = "1" ]; then
        echo "user does not exist";
        exit 0
    fi

    set -e

    echo "user already exists"
    exit 1
}

_checkifuserexists () {
    echo " -- checkifuserexists"

    set +e

    id ${login}

    if [ "$?" = "1" ]; then
        echo "user must already exist";
        exit 1
    fi

    set -e
}
